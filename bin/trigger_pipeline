#!/bin/sh -e

if [ $# -ne 1 ]; then
    echo "usage: $0 file" 1>&2
    exit 1
fi

ROOTDIR=$(cd $(dirname $(dirname $0)); pwd)

export OONI_GEOIP_DIR=$ROOTDIR/data/geoip
export OONI_RAW_DIR=.
export OONI_LOG_LEVEL=DEBUG
export OONI_DB_IP="127.0.0.1"
export OONI_DB_PORT="27017"
export OONI_PUBLIC_DIR=.
export OONI_SANITISED_DIR=.

$ROOTDIR/ooni-pipeline/bin/oonipipeline preprocess $1
$ROOTDIR/ooni-pipeline/bin/oonipipeline import $1
